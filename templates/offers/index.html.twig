            <select name="sous-categorie"></select>

                 <form>
 
             <div data-role="rangeslider">
            <label for="range-left" class="txt">Heure par semaine min:</label>
            <input type="range" name="range-left" id="range-left" min="0" max="20" value="5" data-popup-enabled="true" data-show-value="true">
            <label for="range-right" class="txt">Heure par semaine :</label>
            <input type="range" name="range-right" id="range-right" min="0" max="40" value="10" data-popup-enabled="true" data-show-value="true">
              </div>
        </form>

            <label for="ville" class="txt">Ville :</label> <input type="text" id="ville" name="ville">
            <label for="department" class="txt">Département :</label><select name="department"></select>
            {# <label for="exp">Expérience :</label> <input type="range" id="exp" name="exp"> #}
        <form>
             <div data-role="rangeslider">
            <label for="range-left" class="txt">Expérience min:</label>
            <input type="range" name="range-left" id="range-left" min="0" max="20" value="5" data-popup-enabled="true" data-show-value="true">
            <label for="range-right" class="txt">Expérience:</label>
            <input type="range" name="range-right" id="range-right" min="0" max="30" value="10" data-popup-enabled="true" data-show-value="true">
              </div>
        </form>
    

        <label for="jobName" class="txt">Domaine recherché :</label>  
        <input type="text" id="jobName" name="domaine" placeholder="Informatique"> 
        
        </div>
    </div>
