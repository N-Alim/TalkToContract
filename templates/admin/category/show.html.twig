 {% extends "admin/admin.html.twig" %} 

 {% block title %}Category {% endblock %}


{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ category.modifiedAt ? category.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index_admin') }}">Retour à la liste</a>

    <a href="{{ path('category_edit_admin', {'id': category.id}) }}">Modifier</a>

    {{ include('/admin/category/_delete_form.html.twig') }}
{% endblock %}
