{% extends "admin/admin.html.twig" %} 

{% block title %}Offer index {% endblock %}

{% block body %}
    <h1>Index des offres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom du métier</th>
                <th>Nombre d'heures/semaine</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Entreprise</th>
                <th>Expérience</th>
                <th>Active</th>
                {# <th>Créé le</th> #}
                {# <th>Modifié le</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.jobName }}</td>
                <td>{{ offer.weekHoursNumber }}</td>
                <td>{{ offer.town }}</td>
                <td>{{ offer.address }}</td>
                <td>{{ offer.company }}</td>
                <td>{{ offer.experience }}</td>
                <td>{{ offer.active ? 'Yes' : 'No' }}</td>
                {# <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td> #}
                {# <td>{{ offer.modifiedAt ? offer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>
                    <a href="{{ path('offer_show_admin', {'id': offer.id}) }}">Afficher</a>
                    {# <a href="{{ path('offer_edit_admin', {'id': offer.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('offer_new_admin') }}">Create new</a> #}
{% endblock %}
