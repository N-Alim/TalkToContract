{% extends "admin/admin.html.twig" %} 

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Nom du métier</th>
                <td>{{ offer.jobName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Tâches</th>
                <td>{{ offer.tasks }}</td>
            </tr>
            <tr>
                <th>Nombre d'heures/semaine</th>
                <td>{{ offer.weekHoursNumber }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ offer.town }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ offer.address }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ offer.company }}</td>
            </tr>
            <tr>
                <th>Expérience</th>
                <td>{{ offer.experience }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ offer.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Créer le</th>
                <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le</th>
                <td>{{ offer.modifiedAt ? offer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index_admin') }}">retour à la liste</a>

    {# <a href="{{ path('offer_edit_admin', {'id': offer.id}) }}">edit</a> #}

    {{ include('admin/offer/_delete_form.html.twig') }}
{% endblock %}
