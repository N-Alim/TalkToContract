{% extends "admin/admin.html.twig" %} 

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Nom du métier</th>
                <td>{{ offer.jobName }}</td>
            </tr>
            <tr>
                <th>Recruteur</th>
                <td>{{ offer.recruiter.email }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ offer.subCategory.category.name }}</td>
            </tr>
            <tr>
                <th>Sous-catégorie</th>
                <td>{{ offer.subCategory.name }}</td>
            </tr>
            <tr>
                <th>Département</th>
                <td>{{ offer.department.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Tâches</th>
                <td>{{ offer.tasks }}</td>
            </tr>
            <tr>
                <th>Type d'offre</th>
                <td>{{ offer.offersType.label }}</td>
            </tr>
            <tr>
                <th>Nombre d'heures par semaine</th>
                <td>{{ offer.weekHoursNumber }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ offer.town }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ offer.address }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ offer.company }}</td>
            </tr>
            <tr>
                <th>Expérience</th>
                <td>{{ offer.experience }}</td>
            </tr>
            <tr>
                <th>Compétences</th>
                <td> 
                    <ul>
                        {% for skill in offer.skills %}
                            <li>{{ skill.name }}</li>
                        {% endfor %} 
                    </ul>
                   
                </td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ offer.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ offer.modifiedAt ? offer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index_admin') }}">Retour à la liste</a>

    {# <a href="{{ path('offer_edit_admin', {'id': offer.id}) }}">edit</a> #}

    {{ include('admin/offer/_delete_form.html.twig') }}
{% endblock %}
