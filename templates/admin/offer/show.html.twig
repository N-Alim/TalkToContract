{% extends "admin/admin.html.twig" %} 

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Job_name</th>
                <td>{{ offer.jobName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Tasks</th>
                <td>{{ offer.tasks }}</td>
            </tr>
            <tr>
                <th>Week_hours_number</th>
                <td>{{ offer.weekHoursNumber }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ offer.town }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ offer.address }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ offer.company }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ offer.experience }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ offer.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ offer.modifiedAt ? offer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index_admin') }}">back to list</a>

