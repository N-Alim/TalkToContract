 {% extends "admin/admin.html.twig" %}
 {% block title %}OffersType{% endblock %}


{% block body %}
    <h1>Type d'offres</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offers_type.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ offers_type.label }}</td>
            </tr>
