{% extends 'admin/admin.html.twig' %}

{% block title %}Départements{% endblock %}

{% block body %}
    <h1>Index des départements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom du département</th>
                <th>Numéro du département</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ department.name }}</td>
                <td>{{ department.number }}</td>
                <td>
                    <a href="{{ path('department_show_admin', {'id': department.id}) }}">Afficher</a>
                    <a href="{{ path('department_edit_admin', {'id': department.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('department_new_admin') }}">Nouveau</a>
{% endblock %}
